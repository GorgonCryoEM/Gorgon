#include <boost/python.hpp>
#include <boost/python/suite/indexing/vector_indexing_suite.hpp>

#include "VolumeData.h"

using namespace Core;

using namespace boost::python;

BOOST_PYTHON_MODULE(@current_pylib@)
{
    class_<std::vector<float> >("std::vector<float>")
            .def(vector_indexing_suite<std::vector<float> >() );
    class_<std::vector<std::vector<float> > >("std::vector<std::vector<float> >")
            .def(vector_indexing_suite<std::vector<std::vector<float> > >() );

    class_<std::vector<double> >("std::vector<double>")
            .def(vector_indexing_suite<std::vector<double> >() );
    class_<std::vector<std::vector<double> > >("std::vector<std::vector<double> >")
            .def(vector_indexing_suite<std::vector<std::vector<double> > >() );


  class_<VolumeData>("VolumeData", init<>())
      .def("getOriginX", &VolumeData::getOriginX)
      .def("getOriginY", &VolumeData::getOriginY)
      .def("getOriginZ", &VolumeData::getOriginZ)
      .def("getSizeX", &VolumeData::getSizeX)
      .def("getSizeY", &VolumeData::getSizeY)
      .def("getSizeZ", &VolumeData::getSizeZ)
      .def("getSize", &VolumeData::getSize)
      .def("getSize", &VolumeData::cmp)
      .def("getSpacingX", &VolumeData::getSpacingX)
      .def("getSpacingY", &VolumeData::getSpacingY)
      .def("getSpacingZ", &VolumeData::getSpacingZ)
//      .def("getMin", &VolumeData::getMin)
//      .def("getMax", &VolumeData::getMax)
//      .def("getDataAt", getDataAt)
  ;

}
